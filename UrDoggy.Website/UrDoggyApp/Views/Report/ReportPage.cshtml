@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var postId = ViewBag.PostId;
}

<style>
    form[asp-controller="Report"] {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        background: rgba(255, 255, 255, 0.98);
        border-radius: 1.5rem;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease;
    }

        form[asp-controller="Report"]:hover {
            transform: translateY(-2px);
        }

    .form-select {
        border: 2px solid var(--secondary);
        border-radius: 1rem;
        padding: 0.75rem 1.25rem;
        transition: all 0.3s ease;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%230984e3' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
    }

        .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(9, 132, 227, 0.15);
        }

    option:hover {
        background: rgba(9, 132, 227, 0.1) !important;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ff6b6b 0%, #ff4757 100%);
        border: none;
        border-radius: 2rem;
        padding: 0.6rem 1.75rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(255, 107, 107, 0.35);
        }

    .btn-secondary {
        background: linear-gradient(135deg, #f1f2f6 0%, #dfe4ea 100%);
        border: none;
        color: #2d3436;
    }

    button[type="submit"]:disabled {
        opacity: 0.8;
        position: relative;
    }

        button[type="submit"]:disabled::after {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            width: 18px;
            height: 18px;
            border: 2px solid rgba(255, 255, 255, 0.6);
            border-top-color: transparent;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            transform: translate(-50%, -50%);
        }

    @@media (max-width: 768px) {
        form[asp-controller="Report"] {
            margin: 1rem;
            padding: 1.5rem;
        }

        .btn {
            width: 100%;
            margin-bottom: 0.5rem;
        }

        .ms-2 {
            margin-left: 0 !important;
        }
    }

    @@keyframes spin {
        to {
            transform: translate(-50%, -50%) rotate(360deg);
        }
    }
</style>

<h2>Report Post</h2>

<form method="post"
      asp-controller="Report"
      asp-action="CreatePost">
    @Html.AntiForgeryToken()
    <input type="hidden" name="postId" value="@postId" />

    <div class="mb-3">
        <label for="reason" class="form-label">Select Reason</label>
        <select id="reason" name="reason" class="form-select" required>
            <option value="">-- Choose a reason --</option>
            <option value="Inappropriate content">Inappropriate content</option>
            <option value="Spam">Spam</option>
            <option value="Harassment">Harassment</option>
            <option value="Other">Other</option>
        </select>
    </div>

    <button type="submit" class="btn btn-danger">Submit Report</button>
    <a asp-controller="Newsfeed"
       asp-action="Index"
       class="btn btn-secondary ms-2">Cancel</a>
</form>