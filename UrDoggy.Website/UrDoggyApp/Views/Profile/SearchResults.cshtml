@model List<UrDoggy.Core.Models.User>
@inject UrDoggy.Services.Interfaces.IUserService UserService

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var me = Context.Session.GetInt32("UserId");
    var defaultAvatar = Url.Content("~/images/default-avatar.png");
}

<h3>Search Results</h3>

@if (!Model.Any())
{
    <p>No users found.</p>
}
else
{
    <ul class="list-group">
        @foreach (var user in Model)
        {
            var u = await UserService.GetById(user.Id);
            var avatarUrl = string.IsNullOrWhiteSpace(u?.ProfilePicture)
            ? defaultAvatar
            : Url.Content(u.ProfilePicture);

            <li class="list-group-item d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <img src="@avatarUrl"
                         class="rounded-circle me-3"
                         style="width:40px;height:40px;" />
                    <a href="/Profile/@u.Id">@u.UserName</a>
                </div>

                @if (me.HasValue && me.Value != u.Id)
                {
                    <form asp-controller="Friends"
                          asp-action="SendRequest"
                          method="post"
                          class="m-0">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="friendId" value="@u.Id" />
                        <button type="submit" class="btn btn-sm btn-primary">
                            Add Friend
                        </button>
                    </form>
                }
            </li>
        }
    </ul>
}
