@using UrDoggy.Core.Models.GroupModels
@model Group

@{
    ViewData["Title"] = "Tạo nhóm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Tạo nhóm mới</h2>
        <a class="btn btn-outline-secondary" href="~/Group/Index">← Quay lại</a>
    </div>

    @using (Html.BeginForm("CreateGroup", "Group", FormMethod.Post))
    {
        <div class="mb-3">
            <label class="form-label">Tên nhóm</label>
            <input class="form-control" name="GroupName" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Mô tả</label>
            <textarea class="form-control" name="Description" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Avatar URL (tùy chọn)</label>
            <input class="form-control" name="Avatar" placeholder="/images/default-avatar.png" />
        </div>
        <div class="mb-3">
            <label class="form-label">Cover URL (tùy chọn)</label>
            <input class="form-control" name="CoverImage" placeholder="/images/default-cover.png" />
        </div>
        <button type="submit" class="btn btn-success">Tạo nhóm</button>
    }
</div>
