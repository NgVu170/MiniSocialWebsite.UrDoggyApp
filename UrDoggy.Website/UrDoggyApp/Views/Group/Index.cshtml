@using UrDoggy.Core.Models.GroupModels
@model IEnumerable<Group>

@{
    ViewData["Title"] = "Groups";
    var userInGroups = ViewBag.UserInGroups as List<GroupDetail> ?? new List<GroupDetail>();
    var modGroups = ViewBag.ModGroups as HashSet<int> ?? new HashSet<int>();
    var userId = ViewBag.UserId as int?;
    var userGroupIds = userInGroups.Select(g => g.GroupId).ToHashSet();

    <link rel="stylesheet" href="~/css/layout.css" />
}

<style>
    /* Container Animation */
    .container.mt-4 {
        animation: fadeIn 0.4s ease-out;
    }

    ::-webkit-scrollbar {
        width: 0;
        background: transparent;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Group Cards */
    .card {
        border: none;
        border-radius: 1.5rem;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: var(--card-bg);
        box-shadow: var(--shadow);
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
        }

    .card-img-top {
        height: 180px;
        object-fit: cover;
        border-radius: 1.5rem 1.5rem 0 0;
        transition: transform 0.3s ease;
    }

    .card:hover .card-img-top {
        transform: scale(1.05);
    }

    /* Avatar Styles */
    .rounded-circle[style*="40px"] {
        border: 2px solid var(--secondary);
        box-shadow: 0 4px 12px rgba(9, 132, 227, 0.15);
    }

    /* Action Buttons */
    .btn-outline-primary,
    .btn-outline-secondary,
    .btn-primary {
        transition: all 0.2s ease;
        border-radius: 1rem;
        padding: 0.4rem 1rem;
        position: relative;
        overflow: hidden;
    }

    .btn-primary {
        background: linear-gradient(135deg, #25D366 0%, #0984e3 100%);
        border: none;
    }

    .btn-outline-primary:hover {
        background: rgba(9, 132, 227, 0.1);
    }

    .btn-outline-secondary:hover {
        background: rgba(108, 117, 125, 0.1);
    }

    .btn-warning {
        background: linear-gradient(135deg, #ffd700 0%, #ff8c00 100%);
        border: none;
        color: white;
    }

    /* Loading State */
    button[type="submit"]:disabled {
        opacity: 0.7;
        position: relative;
    }

        button[type="submit"]:disabled::after {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            width: 16px;
            height: 16px;
            border: 2px solid rgba(255,255,255,0.3);
            border-top-color: transparent;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            transform: translate(-50%, -50%);
        }

    /* Empty State */
    .alert-info {
        border-radius: 1rem;
        background: rgba(9, 132, 227, 0.1);
        border: none;
        color: var(--text);
    }

    /* Mobile Optimization */
    @@media (max-width: 768px) {
        .card-img-top {
            height: 120px;
        }

        .d-flex.justify-content-between {
            flex-direction: column;
            gap: 1rem;
        }

        .btn-success {
            width: 100%;
        }
    }

    @@keyframes spin {
        to {
            transform: translate(-50%, -50%) rotate(360deg);
        }
    }
</style>


@section LeftSidebar {
    <partial name="~/Views/Shared/Partials/LeftSidebar/_LeftSidebar.cshtml" />
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Danh sách nhóm</h2>
        <a class="btn btn-success" href="~/Group/CreateGroup">+ Tạo nhóm</a>
    </div>

    @if (!Model?.Any() ?? true)
    {
        <div class="alert alert-info">Chưa có nhóm nào.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var g in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <img class="card-img-top" src="@(string.IsNullOrWhiteSpace(g.CoverImage) ? "/images/default-cover.png" : g.CoverImage)" alt="cover" onerror="this.src='/images/default-cover.png';" />
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <img src="@(string.IsNullOrWhiteSpace(g.Avatar) ? "/images/default-avatar.png" : g.Avatar)" alt="avatar" class="rounded-circle me-2" style="width:40px;height:40px;object-fit:cover;" onerror="this.src='/images/default-avatar.png';" />
                                <h5 class="card-title mb-0">@g.GroupName</h5>
                            </div>
                            <p class="card-text text-muted">@g.Description</p>
                            <div class="d-flex gap-2">
                                <a class="btn btn-outline-primary btn-sm" href="~/Group/PostsInGroup?groupId=@g.Id">Xem bài</a>

                                @if (userGroupIds.Contains(g.Id))
                                {
                                    <form method="post" action="~/Group/LeaveGroup" class="d-inline">
                                        <input type="hidden" name="groupId" value="@g.Id" />
                                        <button class="btn btn-outline-secondary btn-sm" type="submit">Rời nhóm</button>
                                    </form>

                                    @if (modGroups.Contains(g.Id))
                                    {
                                        <a class="btn btn-warning btn-sm" href="~/Group/GroupManagement?groupId=@g.Id">Quản trị</a>
                                    }
                                }
                                else
                                {
                                    <form method="post" action="~/Group/JoinGroup" class="d-inline">
                                        <input type="hidden" name="groupId" value="@g.Id" />
                                        <button class="btn btn-primary btn-sm" type="submit">Tham gia</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
