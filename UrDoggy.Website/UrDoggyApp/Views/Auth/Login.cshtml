@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login - UrDoggy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: url('./images/default-bg-login.jpg') no-repeat;
            background-size: cover;
            background-position: center;
        }


        .form-container {
            animation: fadeInUp 0.6s cubic-bezier(0.22, 0.61, 0.36, 1);
            max-width: 400px;
            margin: 60px auto;
            text-align: center;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .logo-box {
            border-radius: 20px;
            display: inline-block;
            margin-bottom: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 8px 24px rgba(37, 211, 102, 0.15);
        }

            .logo-box img {
                border-radius: 20px;
                height: auto;
                width: 200px;
            }

            .logo-box:hover {
                transform: rotate(-2deg) scale(1.05);
                box-shadow: 0 12px 32px rgba(37, 211, 102, 0.25);
            }

        .wrapper {
            width: 420px;
            background: #F0F0F0;
            border: 3px solid #25d366;
            box-shadow: 0 0 20px white;
            color: #25d366;
            border-radius: 20px;
            padding: 30px 40px;
        }

            .wrapper h1 {
            font-size: 36px;
            text-align: center;
            }

        .wrapper .input-box {
            position: relative;
            width: 100%;
            height: 50px;
            margin: 20px 0;
        }

            .wrapper .input-box input {
                width: 100%;
                height: 100%;
                background: transparent;
                border: none;
                outline: none;
                border: 2px solid #25d366;
                border-radius: 40px;
                font-size: 16px;
                color: #25d366;
                padding: 20px 45px 20px 20px;
            }

                .wrapper .input-box input::placeholder {
                    color: #25d366;
                }

            .wrapper .input-box i {
                position: absolute;
                right: 20px;
                top: 50%;
                transform: translateY(-50%);
                font-size: 20px;
            }

        .wrapper .register-link {
            font-size: 14.5px;
            text-align: center;
            margin: 20px 0 15px;
        }

            .register-link p a {
                color: #25d366;
                text-decoration: none;
                font-weight:600;

            }

            .register-link p a:hover {
                text-decoration: underline;
            }

        .login-button {
            background: linear-gradient(135deg, #25D366 0%, #0984e3 100%);
            border: 1px solid #25D366;
            padding: 0.5rem 2rem;
            border-radius: 2rem;
            transition: transform 0.2s, box-shadow 0.2s;
            color: white;
        }

            .login-button:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 24px rgba(0, 184, 148, 0.08);
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(37, 211, 102, 0.4);
            }

    </style>

</head>
<body>
    <div class="form-container">
        <div class="wrapper">
            <div class="logo-box">
                <img src="~/images/default-logo.png" alt="UrDoggy Logo" />
            </div>
            <h1>Login</h1>
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="input-box">
                    <input type="email" name="email" placeholder="Email" required/>
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                </div>
                <div class="input-box">
                    <input type="password" name="password" placeholder="Password" required />
                    <i class="fa fa-lock" aria-hidden="true"></i>
                </div>
                <div class="mt-3 register-link">
                    <p>Don't have an account? <a 
                    href="/Auth/Register">Register now</a></p>
                </div>
                
                <button type="submit" class="login-button w-100">Log in</button>
            </form>
        </div>
    </div>
</body>
</html>