@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login - UrDoggy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', sans-serif;
        }

        .logo-box {
            background-color: #25D366;
            border-radius: 12px;
            padding: 10px 20px;
            display: inline-block;
            margin-bottom: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 8px 24px rgba(37, 211, 102, 0.15);
        }


            .logo-box:hover {
                transform: rotate(-2deg) scale(1.05);
                box-shadow: 0 12px 32px rgba(37, 211, 102, 0.25);
            }

        .form-container {
            animation: fadeInUp 0.6s cubic-bezier(0.22, 0.61, 0.36, 1);
            max-width: 400px;
            margin: 60px auto;
            text-align: center;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-control {
            border-radius: 8px;
            transition: all 0.3s ease;
            border: 2px solid rgba(0, 0, 0, 0.1);
            padding: 0.75rem 1.25rem;
        }

            .form-control:focus {
                border-color: #25D366;
                box-shadow: 0 0 0 3px rgba(37, 211, 102, 0.15);
            }

        input{
            background: linear-gradient(to right, #25D366 0%, #25D366 var(--strength, 0%), #0984e3 var(--strength, 100%));
            background-size: 100% 3px;
            background-repeat: no-repeat;
            background-position: bottom;
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, #25D366 0%, #0984e3 100%);
            border: none;
            padding: 0.5rem 2rem;
            border-radius: 2rem;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .btn-primary-custom:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 24px rgba(0, 184, 148, 0.08);
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(37, 211, 102, 0.4);
            }

        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            }

        .wrapper .input-box {
            position: relative;
            width: 100%;
            height: 50px;
            margin: 20px 0;
        }

            .wrapper .input-box input {
                width: 100%;
                height: 100%;
                background: transparent;
                border: none;
                outline: none;
                border: 2px solid #25d366;
                border-radius: 40px;
                font-size: 16px;
                color: #25d366;
                padding: 20px 45px 20px 20px;
            }

            .divider span {
                margin: 0 10px;
                color: #999;
            }

        .google-btn {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .google-btn img {
                height: 20px;
                margin-right: 10px;
            }

            .google-btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
                transition: 0.5s;
            }

            .google-btn:hover::before {
                left: 100%;
            }

        .terms {
            font-size: 0.8rem;
            color: #666;
            margin-top: 20px;
        }

            .terms a {
                color: #25D366;
                text-decoration: none;
            }

                .terms a:hover {
                    text-decoration: underline;
                }


    </style>

</head>
<body>
    <div class="form-container">
        <div class="wrapper">
            <div class="logo-box">
                <img src="~/images/default-logo.png" alt="UrDoggy Logo" />
            </div>
            <h1>Login</h1>
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="input-box">
                    <input type="email" name="email" placeholder="Email" required/>
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                </div>
                <div class="input-box">
                    <input type="password" name="password" placeholder="Password" required />
                    <i class="fa fa-lock" aria-hidden="true"></i>
                </div>
                <div class="mt-3 register-link">
                    <p>Don't have an account? <a 
                    href="/Auth/Register">Register now</a></p>
                </div>
                
                <button type="submit" class="login-button w-100">Log in</button>
            </form>
        </div>
    </div>
</body>
</html>