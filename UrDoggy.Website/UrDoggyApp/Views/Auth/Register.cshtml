@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Register - UrDoggy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #ffffff;
            font-family: 'Segoe UI', sans-serif;
        }

        .logo-box {
            background-color: #25D366;
            border-radius: 12px;
            padding: 10px 20px;
            display: inline-block;
            margin-bottom: 20px;
        }

            .logo-box img {
                height: auto;
                width: 200px;
            }

        .form-container {
            max-width: 400px;
            margin: 60px auto;
            text-align: center;
        }

        .form-control {
            border-radius: 8px;
        }

        .btn-primary-custom {
            background-color: #25D366;
            border: none;
            border-radius: 8px;
        }

        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 20px 0;
        }

            .divider::before,
            .divider::after {
                content: '';
                flex: 1;
                border-bottom: 1px solid #ccc;
            }

            .divider span {
                margin: 0 10px;
                color: #999;
            }

        .google-btn {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
        }

            .google-btn img {
                height: 20px;
                margin-right: 10px;
            }

        .terms {
            font-size: 0.8rem;
            color: #666;
            margin-top: 20px;
        }

            .terms a {
                color: #25D366;
                text-decoration: none;
            }

                .terms a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="logo-box">
            <img src="~/images/logo.png" alt="UrDoggy Logo" />
        </div>

        <h3 class="text-success fw-bold">Create an account</h3>
        <p class="text-success">Enter your email to sign up for this app</p>

        <form method="post">
            @Html.AntiForgeryToken()
            <input type="text"
                   name="username"
                   class="form-control mb-3"
                   placeholder="please enter your username"
                   required />

            <input type="email"
                   name="email"
                   class="form-control mb-3"
                   placeholder="please enter your email"
                   required />

            <input type="password"
                   name="password"
                   class="form-control mb-3"
                   placeholder="please enter your password"
                   required />

            <button type="submit"
                    class="btn btn-primary-custom w-100 py-2">
                Sign up with email
            </button>
        </form>

        <div class="mt-3">
            <span>Already have an account? </span>
            <a href="/Auth/Login" class="text-success fw-semibold">Log in now</a>
        </div>
        <div class="divider">
            <span>or continue with</span>
        </div>

        <button class="google-btn w-100">
            <img src="https://www.citypng.com/public/uploads/preview/google-logo-icon-gsuite-hd-701751694791470gzbayltphh.png" alt="Google Logo" />
            <span class="text-success fw-semibold">Google</span>
        </button>

        <div class="terms">
            By clicking continue, you agree to our
            <a href="#">Terms of Service</a> and
            <a href="#">Privacy Policy</a>.
        </div>
    </div>
</body>
</html>