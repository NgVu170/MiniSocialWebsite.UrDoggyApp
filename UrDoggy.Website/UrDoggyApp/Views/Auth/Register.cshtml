@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Register - UrDoggy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #ffffff;
            font-family: 'Segoe UI', sans-serif;
        }

        .logo-box {
            background-color: #25D366;
            border-radius: 12px;
            padding: 10px 20px;
            display: inline-block;
            margin-bottom: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 8px 24px rgba(37, 211, 102, 0.15);
        }

            .logo-box img {
                height: auto;
                width: 200px;
            }

            .logo-box:hover {
                transform: rotate(-2deg) scale(1.05);
                box-shadow: 0 12px 32px rgba(37, 211, 102, 0.25);
            }

        .form-container {
            animation: fadeInUp 0.6s cubic-bezier(0.22, 0.61, 0.36, 1);
            max-width: 400px;
            margin: 60px auto;
            text-align: center;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-control {
            border-radius: 8px;
            transition: all 0.3s ease;
            border: 2px solid rgba(0, 0, 0, 0.1);
            padding: 0.75rem 1.25rem;
        }

            .form-control:focus {
                border-color: #25D366;
                box-shadow: 0 0 0 3px rgba(37, 211, 102, 0.15);
            }

        input {
            background: linear-gradient(to right, #25D366 0%, #25D366 var(--strength, 0%), #0984e3 var(--strength, 100%));
            background-size: 100% 3px;
            background-repeat: no-repeat;
            background-position: bottom;
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, #25D366 0%, #0984e3 100%);
            border: none;
            padding: 0.5rem 2rem;
            border-radius: 2rem;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .btn-primary-custom:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 24px rgba(0, 184, 148, 0.08);
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(37, 211, 102, 0.4);
            }

        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 20px 0;
        }

            .divider::before,
            .divider::after {
                content: '';
                flex: 1;
                border-bottom: 1px solid #ccc;
            }

            .divider span {
                margin: 0 10px;
                color: #999;
            }

        .google-btn {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .google-btn img {
                height: 20px;
                margin-right: 10px;
            }

            .google-btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
                transition: 0.5s;
            }

            .google-btn:hover::before {
                left: 100%;
            }

        .terms {
            font-size: 0.8rem;
            color: #666;
            margin-top: 20px;
        }

            .terms a {
                color: #25D366;
                text-decoration: none;
            }

                .terms a:hover {
                    text-decoration: underline;
                }

    </style>
</head>
<body>
    <div class="form-container">
        <div class="logo-box">
            <img src="~/images/logo.png" alt="UrDoggy Logo" />
        </div>

        <h3 class="text-success fw-bold">Create an account</h3>
        <p class="text-success">Enter your email to sign up for this app</p>

        <form method="post">
            @Html.AntiForgeryToken()
            <input type="text"
                   name="username"
                   class="form-control mb-3"
                   placeholder="please enter your username"
                   required />

            <input type="email"
                   name="email"
                   class="form-control mb-3"
                   placeholder="please enter your email"
                   required />

            <input type="password"
                   name="password"
                   class="form-control mb-3"
                   placeholder="please enter your password"
                   required />

            <button type="submit"
                    class="btn btn-primary-custom w-100 py-2">
                Sign up with email
            </button>
        </form>

        <div class="mt-3">
            <span>Already have an account? </span>
            <a href="/Auth/Login" class="text-success fw-semibold">Log in now</a>
        </div>
        <div class="divider">
            <span>or continue with</span>
        </div>

        <button class="google-btn w-100">
            <img src="https://www.citypng.com/public/uploads/preview/google-logo-icon-gsuite-hd-701751694791470gzbayltphh.png" alt="Google Logo" />
            <span class="text-success fw-semibold">Google</span>
        </button>

        <div class="terms">
            By clicking continue, you agree to our
            <a href="#">Terms of Service</a> and
            <a href="#">Privacy Policy</a>.
        </div>
    </div>
</body>
</html>