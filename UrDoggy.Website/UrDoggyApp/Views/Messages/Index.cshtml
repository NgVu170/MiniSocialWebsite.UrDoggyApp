        });

        // Message reactions
        document.querySelectorAll('.message-bubble').forEach(bubble => {
            bubble.addEventListener('contextmenu', function(e) {
                e.preventDefault();
                showReactionMenu(this, e.clientX, e.clientY);
            });
        });

        function showReactionMenu(element, x, y) {
