@using UrDoggy.Core.Models

@{
    var currentUser = ViewBag.CurrentUser as User;
    bool isAdmin = currentUser?.IsAdmin ?? false;
    bool isDashboard = ViewContext.RouteData.Values["controller"]?.ToString() == "Admin";
}

<div class="navbar-right d-flex align-items-center gap-3">

    <!-- SEARCH BAR -->
    <div class="navbar-right-item search-container">
        <form method="get" asp-controller="Profile" asp-action="Search" class="search-form">
            <div class="search-wrapper">
                <input name="q" type="text" class="search-input" placeholder="Search on UrDoggy..." />
                <button type="button" class="search-toggle">
                    <i class="fas fa-search search-icon"></i>
                    <i class="fas fa-times close-icon"></i>
                </button>
            </div>
        </form>
    </div>

    <!-- DROPDOWN -->
    <div class="navbar-right-item dropdown" data-dropdown>
        <button class="nav-link text-white" data-dropdown-button>
            <i class="fas fa-bars"></i>
        </button>
        <div class="dropdown-position-wrapper">
            <ul class="dropdown-menu">
                @if (isAdmin)
                {
                    <li>
                        <a class="dropdown-item" href="/Admin/Dashboard">
                            <i class="fas fa-tachometer-alt"></i>Admin Dashboard
                        </a>
                    </li>
                }

                @if (isDashboard)
                {
                    <li>
                        <a class="dropdown-item" href="/Newsfeed/Index">
                            <i class="fas fa-sign-out-alt"></i>Exit Dashboard
                        </a>
                    </li>
                }

                <li><hr class="dropdown-divider" /></li>

                <li>
                    <a class="dropdown-item" href="#">
                        <i class="fas fa-palette"></i>Theme Customization
                    </a>
                </li>

                <li><hr class="dropdown-divider" /></li>

                <li>
                    <a class="dropdown-item" href="/Auth/Logout">
                        <i class="fas fa-sign-out-alt"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
        
    </div>
</div>
